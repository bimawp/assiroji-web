generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
enum Role {
  peserta
  admin
}
model User {
  id_user   String    @id @default(dbgenerated()) 
  email     String    @unique                 
  name      String?                            
  password  String?                            
  articles  Artikel[]                           
  role      Role      @default(peserta)        
}

model Artikel {
  id_artikel  String   @id @default(cuid())     
  slug        String   @unique               
  title       String                         
  category    String                         
  tags        String[]                      
  headerImage String                          
  content     String                           
  createdAt   DateTime @default(now())     
  updatedAt   DateTime @updatedAt              
  author      User     @relation(fields: [authorId], references: [id_user]) 
  authorId    String                           
}
